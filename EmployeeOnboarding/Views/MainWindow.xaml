<Window x:Class="EmployeeOnboarding.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EmployeeOnboarding.ViewModels"
        Title="Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid Background="#f0f0f0">
        <Border Width="300" Height="200" Background="White" CornerRadius="10" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
            <StackPanel>

                <TextBlock Text="Username" FontWeight="Bold"/>
                <TextBox x:Name="UsernameTextBox"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="30" Margin="0,5,0,15"
                         AutomationProperties.Name="UsernameTextBox"/>

                <TextBlock Text="Password" FontWeight="Bold"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,5,0,20"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             AutomationProperties.Name="PasswordBox"/>

                <Button Content="Login" Height="30" Command="{Binding LoginCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
