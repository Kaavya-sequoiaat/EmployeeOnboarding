<Window x:Class="EmployeeOnboarding.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:views="clr-namespace:EmployeeOnboarding.Views">

    <Grid>
      
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel 
                    Margin="15">

            <Button Content="Home"
                    Margin="0,10"
                    Command="{Binding ShowHomeCommand}"/>

            <Button Content="Add Employee"
                    Margin="0,10"
                    Command="{Binding ShowAddEmployeeCommand}"/>

            <Button Content="Employee List"
                    Margin="0,10"
                    Command="{Binding ShowEmployeeListCommand}"/>

        </StackPanel>

        <!-- Content -->
        <Frame Grid.Column="1"
       NavigationUIVisibility="Hidden"
       Content="{Binding CurrentPage}" />

    </Grid>
</Window>
