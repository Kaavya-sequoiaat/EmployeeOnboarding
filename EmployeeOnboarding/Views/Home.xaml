<Page x:Class="EmployeeOnboarding.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:EmployeeOnboarding.ViewModels"
      Background="#F4F6FA">
    <Page.DataContext>
        <vm:HomeViewModel/>
    </Page.DataContext>
    
    <ScrollViewer>
        <Grid Margin="30">
            <UniformGrid Columns="3">
                <Border>
                    <TextBlock Text="{Binding TotalEmployees}"
                               FontSize="32"
                               FontWeight="Bold"/>
                </Border>
                <Border>
                    <TextBlock Text="{Binding AddedToday}"
                               FontSize="32"
                               FontWeight="Bold"/>
                </Border>
                <Border>
                    <TextBlock Text="{Binding AddedThisMonth}"
                               FontSize="32"
                               FontWeight="Bold"/>
                </Border>
            </UniformGrid>

            <DataGrid ItemsSource="{Binding RecentEmployees}"
                      Margin="0,30,0,0"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding FirstName}"/>
                    <DataGridTextColumn Header="Department" Binding="{Binding Department}"/>
                    <DataGridTextColumn Header="Added On" Binding="{Binding CreatedDate}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ScrollViewer>
</Page>
