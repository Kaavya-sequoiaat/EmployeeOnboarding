<Application x:Class="EmployeeOnboarding.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:EmployeeOnboarding.ViewModels"
             xmlns:views="clr-namespace:EmployeeOnboarding.Views"
             StartupUri="Views/MainWindow.xaml">

    <Application.Resources>

        <ResourceDictionary>

            <!-- ================= MATERIAL DESIGN ================= -->
            <ResourceDictionary.MergedDictionaries>

                <!-- Base theme -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml"/>

                <!-- Controls -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PasswordBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DatePicker.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DataGrid.xaml"/>

                <!-- Colors -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Indigo.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <!-- ================= GLOBAL STYLES ================= -->

            <Style TargetType="TextBox"
                   BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                <Setter Property="Margin" Value="0,6"/>
            </Style>

            <Style TargetType="PasswordBox"
                   BasedOn="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                <Setter Property="Margin" Value="0,6"/>
            </Style>

            <Style TargetType="Button"
                   BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Height" Value="40"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <Style TargetType="DatePicker"
                   BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}">
                <Setter Property="Margin" Value="0,6"/>
                <Setter Property="Height" Value="40"/>
            </Style>

            <!-- ================= MVVM VIEW MAPPING (CRITICAL) ================= -->

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <views:Home />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:AddEmployeeViewModel}">
                <views:AddEmployeePage />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:EmployeeListViewModel}">
                <views:EmployeeListPage />
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>
</Application>
